.user_form {
  width: 90%;
  margin: 10px auto;
}
.user_form .user_form_main {
  -webkit-box-shadow: 33px 57px 188px 0px rgba(21, 21, 21, 0.1);
          box-shadow: 33px 57px 188px 0px rgba(21, 21, 21, 0.1);
  display: block;
  background: white;
  width: 90%;
  height: 95%;
  -webkit-border-radius: 5px;
          border-radius: 5px;
  padding: 2.5% 5%;
}
.user_form .user_form_main .user_helpArticle {
  width: 95%;
  margin: 0px auto;
  padding: 5px 0;
}
.user_form .user_form_main .user_helpArticle .user_helpArticle_avatar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
}
.user_form .user_form_main .user_helpArticle .user_helpArticle_avatar image {
  width: 30px;
  height: 30px;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  margin-right: 5px;
}
.user_form .user_form_main .user_helpArticle .user_helpArticle_avatar text {
  padding-top: 5px;
  font-size: 13px;
}
.user_form .user_form_main .user_helpArticle .user_helpArticle_h1_main .user_helpArticle_h1 {
  font-size: 19px;
  font-weight: bold;
  margin: 15px 0;
  display: -webkit-box;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.user_form .user_form_main .user_helpArticle .user_helpArticle_center {
  width: 100%;
  margin: 10px 0;
  line-height: 30px;
}
.user_form .user_form_main .user_helpArticle .user_helpArticle_footer {
  width: 100%;
  color: #9A9A9A;
  margin: 5px 0;
}
.user_form .user_form_main .user_helpArticle .user_helpArticle_footer text {
  font-size: 13px;
}
.user_form .user_form_main .user_helpArticle .user_helpArticle_img image {
  width: 80px;
  height: 80px;
  margin-right: 5px;
}
.user_form .user_form_main .user_form_title {
  border-bottom: 1px solid #dcdcdc;
  padding: 10px;
}
.user_form .user_form_main .user_form_title input {
  font-size: 16px;
  font-weight: bold;
}
.user_form .user_form_main .user_form_content {
  padding: 20px 10px;
}
.user_form .user_article_button {
  width: 80%;
  margin: 20px auto;
  color: white !important;
  background: #5480FF !important;
  -webkit-border-radius: 15px !important;
          border-radius: 15px !important;
}

