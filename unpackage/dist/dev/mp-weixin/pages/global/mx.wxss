.globalForm .user_family_form_radio {
  padding: 10px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background: white;
  border-bottom: 1px solid #EDEDED;
  -webkit-border-radius: 5px;
          border-radius: 5px;
}
.globalForm .user_family_form_radio text {
  color: #646566;
  font-size: 14px;
  width: 40%;
  padding-left: 5px;
  padding-top: 2px;
}
.globalForm .user_family_form_radio .van-cell {
  padding: 0;
}
.globalForm .user_family_form_radio .van-cell:after {
  border-bottom: 0 !important;
}
.globalForm .user_family_button {
  width: 80%;
  margin: 20px auto;
  color: white !important;
  background: #5480FF !important;
  -webkit-border-radius: 20px !important;
          border-radius: 20px !important;
}
.globalForm .picker {
  color: gray;
  font-size: 15px;
  padding-top: 2px;
}

