.user_info {
  width: 95%;
  height: 100%;
  background: white;
  padding: 20px 10px;
}
.user_info .forms {
  display: block;
  width: 90%;
  margin: 0 auto;
  padding: 10px;
}
.user_info .forms .form_button {
  color: white !important;
  background: #5480FF !important;
}
.user_info .forms .label {
  font-size: 14px;
  color: #555555;
}
.user_info .forms .van-cell--clickable,
.user_info .forms .van-cell {
  padding: 10px 0 10px 0 !important;
}
.user_info .forms .van-cell:after {
  border-bottom: 0 !important;
}
.user_info .forms .van-icon--image {
  width: 40px;
  height: 40px;
}
.user_info .forms .van-icon--image image {
  -webkit-border-radius: 65px;
          border-radius: 65px;
}
.user_info .forms .upload_img {
  width: 100%;
  border-bottom: 1px solid #C7C7C7;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 0 auto;
  padding: 10px 0px;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.user_info .forms .upload_img image {
  width: 40px;
  height: 40px;
  -webkit-border-radius: 50%;
          border-radius: 50%;
}
.user_info .forms .user_info_item {
  border: none;
  padding: 20px 0;
  border-bottom: 1px solid #C7C7C7;
}
.user_info .forms .user_info_item input {
  font-size: 14px;
  padding: 10px 0;
}
.user_info .forms .van-uploader__upload {
  -webkit-border-radius: 50%;
          border-radius: 50%;
}

