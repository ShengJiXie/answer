page {
  background: white;
  font-family: 'SourceHanSansSC-Regular';
}
.user_article {
  width: 90%;
  margin: 0px auto;
  padding: 20px 0;
  border-bottom: 1px solid #E5E5E5;
}
.user_article .user_article_h1_main .user_article_h1 {
  font-size: 19px;
  font-weight: bold;
  margin: 15px 0;
  display: -webkit-box;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.user_article .user_article_avatar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.user_article .user_article_avatar .user_article_avatar_img {
  width: 15%;
}
.user_article .user_article_avatar .user_article_avatar_img image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}
.user_article .user_article_avatar .user_article_avatar_center {
  width: 75%;
  display: grid;
}
.user_article .user_article_avatar .user_article_avatar_center .user_article_avatar_center_h1 {
  font-weight: 600;
}
.user_article .user_article_avatar .user_article_avatar_center .user_article_avatar_center_p {
  color: #6B6969;
  font-size: 12px;
}
.user_article .user_article_avatar .user_article_avatar_right {
  width: 10%;
}
.user_article .user_article_avatar .user_article_avatar_right image {
  padding-top: 10px;
  width: 20px;
  height: 20px;
}
.user_article .user_article_center {
  width: 100%;
  margin: 30px 0;
  line-height: 30px;
}
.user_article .user_article_footer {
  width: 100%;
  color: #9A9A9A;
}
.user_article .user_article_footer text {
  font-size: 13px;
}

